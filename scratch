
{# activate eigrp on interfaces #}
{% for c in l3_int %} {% for i in interfaces %}
    {% if c.interface|regex_replace('^Et.*t(.*)$', 'Et\\1') == i.interface %}
    network {{ c.ip_address|ipv4('address') }} 0.0.0.0
    {% endif %}
{% endfor %} {% endfor %}

